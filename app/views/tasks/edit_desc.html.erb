<%= turbo_frame_tag "desc#{@task.id}" do %>
  <%= form_with(model: @task, url: edit_desc_task_path, method: :post, local: true, class: 'form-container') do |f| %>
    <%= f.text_field :description, placeholder: 'Edit description...', autocomplete: "off", spellcheck: false, autofocus: true %>
    <%= f.submit value: 'Add', data: {turbo_frame: "_top"}, hidden: true %>
  <% end %>
<% end %>