<%= turbo_frame_tag task do %>
  <div class="item opt-tg">
    <div class="cont <%= 'const-done' if task.done %>">
      <%= check_box_tag 'done', task.id, task.done, id: "task_#{task.id}" %>
      <%= link_to task.name, task_path(task), data: { turbo_frame: "right-panel"}, id: 'task_tg' %>
    </div>
    <div class="options hover">
      <%= link_to "more_horiz", '#', data: { turbo: false }, class: 'material-symbols-outlined smaller-icon'%>
      <div class="options-open">
        <%= link_to 'edit', edit_task_path(task), class: 'material-symbols-outlined smaller-icon scale-up edit'%>
        <%= link_to 'delete', task_path(task), data: { turbo_method: :delete, turbo_frame: "_top" }, class: 'material-symbols-outlined smaller-icon scale-up delete'%>
      </div>
    </div>
  </div>
<% end %>